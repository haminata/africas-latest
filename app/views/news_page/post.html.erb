<%= form_for :article do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </p>

    <p>
      <%= f.label :video %><br>
      <%= f.text_field :video %>
    </p>
    <p>
      <%= f.label :image %><br>
      <%= f.text_field :image %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>