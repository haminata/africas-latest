<!DOCTYPE html>
<html>
<head>
  <title>FirstRailsSample</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<style>
  body {
    background-color: linen;
  }

  ul {
    color: maroon;
    margin-left: 40px;
  }
</style>

<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">Africa's Latest</a>
    </div>
    <ul class="nav navbar-nav">
      <li class="active"><a href="/">Home</a></li>
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">News
          <span class="caret"></span></a>
        <ul class="dropdown-menu">
          <li><%= link_to('Politics', news_page_politics_path) %></li>
          <li><%= link_to('Business', news_page_business_path) %></li>
          <li><%= link_to('Technology', news_page_technology_path) %></li>
          <li><%= link_to('Entertainment', news_page_entertainment_path) %></li>
          <li><%= link_to('Weather', news_page_weather_path) %></li>

        </ul>
    </ul>
    <ul class="nav navbar-nav navbar-right">
        <button type="button" class="btn btn-info">
          <span class="glyphicon glyphicon-search"></span> Search
        </button>
      </ul>
  </div>
</nav>

<div class="container">
  <%= yield %>
</div>

</body>
</html>
